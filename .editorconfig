root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.njk]
indent_style = space
indent_size = 4
insert_final_newline = false

[*.html]
indent_style = space
indent_size = 4

[*.sass]
indent_style = space

[*.{yaml,yml}]
indent_style = space
indent_size = 2
